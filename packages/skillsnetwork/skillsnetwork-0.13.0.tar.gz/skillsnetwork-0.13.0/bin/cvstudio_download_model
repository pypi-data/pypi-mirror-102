#!/usr/bin/env python3

import json
import argparse
import skillsnetwork.cvstudio

def download(interactive):
    cvstudio = skillsnetwork.cvstudio.CVStudio(interactive=interactive)

    model = cvstudio.downloadModel()
    return model


parser = argparse.ArgumentParser(description='Download Model from CV Studio')
parser.add_argument('-i', '--interactive', nargs='*', help='Interactive login prompt')
parser.add_argument('-j', '--json', nargs='*', help='Output JSON')
args = parser.parse_args()

model = download(interactive=args.interactive is not None)

if args.json is not None:
    print(json.dumps(model))
else:
    print('Successfully download model to: ' + model['filename'])
