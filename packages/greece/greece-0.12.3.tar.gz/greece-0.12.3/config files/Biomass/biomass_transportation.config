# Biomass transportation configuration file

# Algorithm options
# When projecting polygons (resource and generation) onto network, should we project polygon's centroid ? {true, {false}}
USE_CENTROID_PROJECTION=true


#########################
# Vehicle characteristics

# Time format (travel time output in seconds, minutes or hours) {'s', 'm', 'h'}
TIME_FORMAT=h

# Tare weight (unloaded; common values: 13600-15400 kg)
TARE_WEIGHT=14000

# Gross weight (loaded; common values: 30000-40000 kg)
GROSS_WEIGHT=30000

# Gross horse power (common value: 500)
GROSS_HORSE_POWER=500

# Frontal area (common values: 2.52m² for cars, 5.13m² for vans, 8.67m² for tourist coaches and 7.92m² for trucks)
FRONTAL_AREA=7.92

# Engine efficiency (0.27: gasoline, 0.40: diesel)
ENGINE_EFFICIENCY=0.4

# Fuel volumetric energy density (gasoline: 32.18 MJ/L, diesel: 35.86 MJ/L)
FUEL_VOLUMETRIC_ENERGY_DENSITY=35.86

# Uphill and downhill horse power rates
UPHILL_HORSE_POWER_RATE=0.8
DOWNHILL_HORSE_POWER_RATE=0.6

# Drag resistance
DRAG_RESISTANCE=0.35

# Mass correction factor (rotational inertia)
MASS_CORRECTION_FACTOR=1.05

# Acceleration and deceleration rates
ACCELERATION_RATE=0.5
DECELERATION_RATE=3

