server {
    listen port;
    server_name host;
    client_max_body_size 250M;

    location = /favicon.ico {
        access_log off;
        log_not_found off;
    }

    location /static/ {
        alias /var/www/django_apps/default/deployment/default/collected_static/;
    }

    location /media {
        alias /var/www/django_apps/default/default/media_root/;
    }

    location / {
        include proxy_params;
        proxy_pass http://unix:/run/gunicorn_default.sock;
        client_max_body_size 100m;
        proxy_read_timeout 3600s;
        proxy_connect_timeout 75s;
    }
}
