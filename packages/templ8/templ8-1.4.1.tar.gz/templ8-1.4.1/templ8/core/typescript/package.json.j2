{
  "name": "{{ package_name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "license": "MIT",
  "author": "{{ author }}",
  "main": "dist/bundle.js",
  "types": "./dist/src/main.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "prepublish": "webpack"
  },
  "browser": {
    "child_process": false
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cspell": "^5.3.7",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-flowtype": "^5.4.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-no-smart-quotes": "^1.2.2",
    "eslint-plugin-prettier": "^3.3.1",
    "grunt": "^1.3.0",
    "grunt-cli": "^1.3.0",
    "grunt-exec": "^3.0.0",
    "jasmine-ts": "0.3.2",
    "jasmine-spec-reporter": "6.0.0",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0",
    "ts-node": "9.1.1",
    "typescript": "^4.2.3"
  }
  {%- if is_portfolio %},
  "portfolio": {
    "project_type": "{{ project_type }}",
    "homepage": "{{ homepage | default(repository) }}",
    "status": "{{ status_level | to_lifecycle_stage }}"
    {%- if languages %},
    "languages": [
      {{ languages | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}
    {%- if paradigms %},
    "paradigms": [
      {{ paradigms | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}
    {%- if frameworks %},
    "frameworks": [
      {{ frameworks | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}

  }
  {% endif %}
}