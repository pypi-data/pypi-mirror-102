{
  "name": "{{ package_name }}",
  "version": "{{ version }}",
  "description": "{{ description }}",
  "license": "MIT",
  "author": "{{ author }}",
  "devDependencies": {
    "cspell": "^5.3.7",
    "grunt": "^1.3.0",
    "grunt-cli": "^1.3.0",
    "grunt-exec": "^3.0.0",
    "prettier": "^2.2.1",
    "remark-cli": "^9.0.0",
    "remark-lint": "^8.0.0",
    "remark-preset-lint-recommended": "^5.0.0"
  }
  {%- if is_portfolio %},
  "portfolio": {
    "project_type": "{{ project_type }}",
    "homepage": "{{ homepage | default(repository) }}",
    "status": "{{ status_level | to_lifecycle_stage }}"
    {%- if languages %},
    "languages": [
      {{ languages | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}
    {%- if paradigms %},
    "paradigms": [
      {{ paradigms | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}
    {%- if frameworks %},
    "frameworks": [
      {{ frameworks | map("to_quote") | join(",\n") | indent(6) | safe }}
    ]
    {%- endif %}

  }
  {% endif %}
}