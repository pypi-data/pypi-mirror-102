#!/usr/bin/env python3 
# This file is placed in the Public Domain.

import os, sys ; sys.path.insert(0, os.getcwd())

from op.clt import Console
from op.trm import exec
from op.tbl import tbl
from op.zzz import os, time

def main():
    k = Console()
    k.prompt = False
    k.tbl(tbl)
    k.cfg.name = "evrm"
    k.cfg.version = 70
    k.parse()
    k.scan(os.path.join(os.getcwd(), "mod"))
    if k.cfg.txt:
        k.run()
        return
    if k.op("c"):
        k.prompt = True
        k.start()
        k.init(k.cfg.mods)
        k.wait()

exec(main)
